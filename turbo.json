{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "dev": {
      "outputs": []
    },
    "test": {
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "package": {
      "dependsOn": ["build"],
      "inputs": [
        "./packages/*",
        "./packages/components/*",
        "./packages/components/@deprecated/*",
        "./packages/documentation/*",
        "./packages/controllers/*",
        "./packages/tools/*"
      ],
      "outputs": []
    }
  }
}
