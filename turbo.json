{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/next",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": [],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
    },
    "lint": {
      "outputs": []
    },
    "package": {
      "dependsOn": ["build", "test", "lint"],
      "inputs": [
        "./packages/*",
        "./packages/components/*",
        "./packages/components/@deprecated/*",
        "./packages/documentation/*",
        "./packages/controllers/*",
        "./packages/tools/*"
      ],
      "outputs": []
    }
  }
}
