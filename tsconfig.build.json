{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "target": "es2017",
    "baseUrl": ".",
    "isolatedModules": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": false,
    "importHelpers": true
  },
  "paths": {
    "@phase2/*": ["packages/*"]
  },
  "include": ["packages/**/*.ts", "packages/env.d.ts"],
  "exclude": [
    "packages/tools/outline-cli/*",
    "node_modules",
    "dist",
    "**/node_modules/*",
    "**/coverage/*",
    "**/dist/**/*",
    "**/test/**/*",
    "*.tsbuildinfo"
  ]
}
